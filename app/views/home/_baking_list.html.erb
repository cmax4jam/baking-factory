<% if items.empty? %>
    <h5>There are no <%= category %> items to bake at this time.</h5>
<% else %>
    <table class="table striped">
    <thead>
        <tr>
        <th width="70">Item</th>
        <th width="50">Quantity</th>
        </tr>
    </thead>
    <tbody>
        <% items.each do |name, quantity| %>
        <tr>
            <td><%= name %></td>
            <td><%= quantity %></td>
        </tr>
        <% end %>
    </tbody>
    </table>
<% end %>