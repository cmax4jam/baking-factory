<div class="row">
  <div class="col s9">
    <div class="card">    
      <div class="card-content">
        <span class="card-title"><%= type_of_form %></span>
        <%= simple_form_for(object) do |f| %>
          <%= f.error_notification %>
          <div class="row">
            <div class="form-inputs">
              <%= render partial: "#{fields1}", locals: { f: f } %>
            </div>
          </div>
      </div>
    </div>

    <div class="row">
      <div class="col s12">
        <div class="card">
          <div class="row">
            <div class="card-content">
              <span class="card-title"><%= section_2 %></span>
              <div class="form-inputs">
                <%= f.simple_fields_for :user do |ff|%>
                    <%= render partial: "#{fields2}", locals: { ff: ff} %>
                <% end %>
              </div>
            </div>
          </div>    
        </div>              
      </div>
    </div>

      <div class="row">
        <div class="form-actions col s9">
          <%= f.button :submit, "REGISTER" %>
        </div>
      </div>
    <% end %>
  </div>
</div>


<div class="row">
  <div class="col s6">
    <%= link_to :back do %>
      <i class="material-icons">arrow_back</i>
      <p>Back</p>
    <% end %>
  </div>
</div>
