<div class="row valign-wrapper" id="topbar">
  <div class="col s1">
    <%# link_to(image_tag('logos/logo_v2_80x80.png'), home_path) %>
  </div>
  <div class="col s7">
    <h2><%= link_to "Baking Factory", home_path, class: "home_link" %></h2>
  </div>
  <div class="col s2">
    <% if logged_in? %>
      <p> Welcome, <%= current_user.username%></p>
      <%= link_to "LOGOUT", logout_path, class: "waves-effect waves-light btn" %>
    <% else %>
      <%= link_to "LOGIN", login_path, class: "waves-effect waves-light btn" %>
    <% end %>
  </div>

  <div class="col s1">
    &nbsp;
  </div>
</div>