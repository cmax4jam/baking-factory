<div class="row">
  <div class="col s9">
    <div class="card">    
      <div class="card-content">
        <span class="card-title"><%= type_of_form %></span>
        <%= simple_form_for(object) do |f| %>
          <%= f.error_notification %>
          <div class="row">
            <div class="form-inputs">
              <%= render partial: "#{fields}", locals: { f: f } %>
          </div>
        </div>
      </div>
    </div>
      <div class="row">
        <div class="form-actions col s9">
          <%= f.button :submit %>
          <% if defined?(object.active) %>
            <%= link_to "Make #{object.active ? "Inactive" : "Active"}", eval("toggle_#{object.class.name.downcase}_state_path(#{object.class.name.downcase}_id: #{object.id})"), class: "waves-effect waves-light btn" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= link_to('Back', :back) %>
