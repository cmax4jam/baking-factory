<div class="row">
  <div class="col s9">
    <div class="card">    
      <div class="card-content">
        <span class="card-title">New Item</span>
        <%= simple_form_for(@item) do |f| %>
          <%= f.error_notification %>
          <div class="row">
            <div class="form-inputs">
              <%= render partial: "item_fields", locals: { f: f } %>
            </div>
        </div>
      </div>
    </div>
      <div class="row">
        <div class="form-actions col s9">
          <%= f.button :submit %>
          <% if current_user.role?(:admin) && defined?(@item.active) %>
            <%= link_to "Make #{@item.active ? "Inactive" : "Active"}", toggle_item_state_path(item_id: @item.id), class: "waves-effect waves-light btn" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= link_to('Back', :back) %>
