<% if @breads.empty? && @muffins.empty? && @pastries.empty? %>
  <h4>No active items at this time.</h4>
<% else %>
  <h4>Active Items</h4>
  <table class="table striped">
    <thead>
      <tr>
        <th width="225">Name</th>
        <th width="250">Description</th>
        <th width="200">Units per Item</th>
        <th width="200">Weight</th>
      </tr>
    </thead>
    <tbody>
      <% @active_customers.each do |customer| %>
        <tr>
          <td><%= link_to customer.name, customer_path(customer) %></td>
          <td><%= number_to_phone customer.phone %></td>
          <td><%= mail_to customer.email, customer.email, encode: "javascript"  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<%= will_paginate @active_customers, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>  
<% end %>
<p>&nbsp;</p>