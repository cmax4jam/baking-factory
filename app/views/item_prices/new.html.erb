<div class="row">
  <div class="col s8">
    <h4>New price for <%= @item.name %></h4>
    <%= simple_form_for(@item_price) do |f| %>
      <%= f.error_notification %>
      <div class="row">
        <p>&nbsp;&nbsp;&nbsp;Current cost per unit: <%= number_to_currency(@item.current_price) %></p>
        <p><h6><em>&nbsp;&nbsp;&nbsp;Please enter new price in terms of cents</em></h6></p>

        <div class="form-inputs">
          <%= f.input :item_id, as: :hidden, input_html: { value: @item.id } %>
          <%= f.input :price %>
        </div>
      </div>
      <div class="row">
        <div class="form-actions col s8">
          <%= f.button :submit %>
        </div>
      </div>
    <% end %>
  </div>
</div>